{% extends 'base.html.twig' %}

{% block title %}Slot{% endblock %}

{% block body %}
    <h1>Slot</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slot.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ slot.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ slot.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ slot.status }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ slot.updatedAt ? slot.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ slot.createdAt ? slot.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('slot_index') }}">back to list</a>

    <a href="{{ path('slot_edit', {'id': slot.id}) }}">edit</a>

    {{ include('slot/_delete_form.html.twig') }}
